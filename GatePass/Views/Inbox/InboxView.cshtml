                                     grid-width="100"
                                     data-url="/Inbox/GetWithIncompleteTrans"
                                     grid-selection-mode="singlerow"
                                     grid-pagesizeoptions="5,10,20,50,100"
                                     data-action-buttons="Edit"
                                     grid-hide-columns="0,2,5,7,8"
