                                            <label for="cmdSupplier">Supplier:</label>
                                            <div type="text" class="form-control dropdownlist" id="cmdSupplier" placeholder="Select Supplier" data-url="/Transactions/GetSupplierCombo" data-display="supplier_string" data-value="code_string"></div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-3">
                                            <label for="cmbTransType">Transaction Type*:</label>
                                            <select id="cmbTransType" class="form-control">
                                                <option value="IN">IN</option>
                                                <option value="OUT">OUT</option>
                                            </select>
                                        </div>

                                        <div class="col-md-3">
                                            <label for="txtReturnDate">Return Date*:</label>
                                            <div class="input-group input-append date form_datetime">
                                                <input id="txtReturnDate" type="text" class="form-control" style="background-color:transparent" readonly />

                                                <span class="input-group-addon add-on">
                                                    <i class="fa fa-calendar faa-tada animated-hover"
                                                       style="color: #31B0D5">
                                                    </i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="txtPurpose">Purpose:<span class="asterisc" style="color:red;font-size:12px">*</span></label>

                                            <input type="text" class="form-control" id="txtPurpose" placeholder="Purpose">
                                        </div>
                                    </div>

                                </div>*@



                                <div class="col-md-6">
