@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/template/_Login.cshtml";
}

@using (Html.BeginForm(new { ReturnUrl = Request.QueryString["ReturnUrl"] }))
{
    @section content {

        @* @version: 1.0, author: abasolo, description: login form, parameters username and password / landing page *@

        <div class="col-md-3 center">
            <div class="login-box">
                <a href="index.html" class="logo-name text-lg text-center">ONLINE GATE PASS</a>
                <p class="text-center m-t-md">Please login into your account.</p>

                <div class="form-group">
                    <input id="txtReturnURL" type="hidden" class="form-control" style="display:none;" value="@ViewBag.ReturnUrl">
                    <input id="txtUsername" type="text" class="form-control" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <input id="txtPassword" type="password" class="form-control" placeholder="Password" required>
                </div>
                <button type="button" id="cmdLogin" class="btn btn-success btn-block">Login</button>

                <div class="progress">
                    <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                        Connecting to ALLEGRO AD Server...
                    </div>
                </div>
               
                <p class="text-center m-t-xs text-sm">2016 &copy; AMPI Software Development Group.</p>
             

            </div>
        </div>
    }
}